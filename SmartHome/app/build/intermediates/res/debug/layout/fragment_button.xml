<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView android:text="raspberry pi light control" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:textSize="24dp"
        android:enabled="false"
        android:textStyle="bold"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tb"
        android:checked="false"
        android:textOff="turn on"
        android:textOn="turn off"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv1"
        android:src="@drawable/bulb"
        android:layout_alignTop="@+id/iv2"
        android:layout_alignLeft="@+id/iv2"
        android:layout_alignStart="@+id/iv2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv2"
        android:src="@drawable/bulb_raw"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true" />

</RelativeLayout><!-- From: file:/E:/1Polyu/year3sem2/computing/project/SmartHome/app/src/main/res/layout/fragment_button.xml -->